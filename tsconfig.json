{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "dom",
      "ES6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "build/",
    "removeComments": true,
    "sourceMap": true,
    "target": "ES6",
    "types": [
      "node"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
